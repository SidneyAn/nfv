
<div class="tab-headers">
    <ul id="Volume Snapshots" class="nav nav-tabs" data-sticky-tabs="sticky">
        <li class="active">
            <a><h4>Volume Snapshots</h4></a>
        </li>
    </ul>
</div>

<div class="tab-content">
    <div class="tab-pane active">
        <table class="table table-bordered table-striped main-table" id="volume_snapshots">
            <thead>
                <tr>
                    <th class="sortable normal_column">UUID</th>
                    <th class="sortable normal_column">Name</th>
                    <th class="sortable normal_column">Description</th>
                    <th class="sortable normal_column">Size</th>
                    <th class="sortable normal_column">Volume UUID</th>
                </tr>
            </thead>
            <tbody>
            {{#volume_snapshots}}
            <tr class="fluid">
                <td class="html_refresh" id="volume_snapshot_{{uuid}}_uuid">{{uuid}}</td>
                <td class="html_refresh" id="volume_snapshot_{{uuid}}_name">{{name}}</td>
                <td class="html_refresh" id="volume_snapshot_{{uuid}}_description">{{description}}</td>
                <td class="html_refresh" id="volume_snapshot_{{uuid}}_size">{{size_gb}}GB</td>
                <td class="html_refresh" id="volume_snapshot_{{uuid}}_action">{{volume_uuid}}</td>
            </tr>
            {{/volume_snapshots}}
            <tfoot>
                <tr>
                    <td colspan="5">
                        {{#ifCompare volume_snapshots.length '==' '1'}}
                            <span class="table_count">Displaying {{volume_snapshots.length}} item</span>
                        {{else}}
                            <span class="table_count">Displaying {{volume_snapshots.length}} items</span>
                        {{/ifCompare}}
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>